<div class="modal-body">
  <% object.each do |n| %>
    <% if n.notice_type == "friendRequest" %>
      <% user = notification_find(n, 'friendRequest') %>
      <%= "Friend Request from #{user.full_name}" %>
    <% end %>
    
    <% if n.notice_type == "comment" %>
      <%= link_to posts_path(notification_find(n, 'comment')) do %>
        Someone commented on your post
      <% end %>
    <% end %>

    <% if n.notice_type == "like-post" %>
      <%= link_to posts_path(notification_find(n, 'like-post')) do %>
        Someone liked your post
      <% end %>
    <% end %>

    <% if n.notice_type == "like-comment" %>
      <%= link_to posts_path(notification_find(n, 'like-comment')) do %>
        Someone liked your comment on this post
      <% end %>
    <% end %>
    <br>
  <% end %>
</div>